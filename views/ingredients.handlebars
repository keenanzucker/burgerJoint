<h1>Welcome to da Ingredients Page</h1>

<h3>Ingredients List</h3>

<table id="ing-table">
<tr>
  <th>Ingredient</th>
  <th>Price</th>
  <th>Stock?</th>
  <th>Change Stock</th>
  <th>Edit</th>
</tr>
  {{#each ingredients}}
  <tr class="ing-row">
  <form id={{this._id}} class="stock-form" action="outOfStock" method="POST">
     <td class="ing-name">{{name}}</td>
     <td class="ing-price">{{price}}</td>
     <td class="ing-stock">{{stock}}</td>
     <td><input type="submit" value="Out of Stock"/></td>
     <td><input id={{this._id}} class="edit-button" type="button" value="Edit"/> 
     </td>
  </form>
  </tr>
  {{/each}}
</table>

<br >
<input style="padding:2%" type="submit" id="add-id" value="ADD NEW INGREDIENT"/>

<form id="new-form" action="new" method="POST">
  <input type="text" name="name" placeholder="ingredient name"/><br/>
  <input type="text" name="price" placeholder="price"/><br/>
  <input type="submit" value="Submit">
</form>

<br>
<br>
<br>

<form id="edit-form" action="edit" method=POST>
  <input name="editName" type="text" placeholder="new name"> 
  <input name="editCost" type="text" placeholder="new price">
  <input type="submit" value="Submit">
</form>